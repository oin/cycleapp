{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "make",
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"echo": true,
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false,
				"revealProblems": "onProblem"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Run",
			"type": "shell",
			"command": "make install",
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"echo": true,
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false,
				"revealProblems": "onProblem"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "Clean",
			"type": "shell",
			"command": "make clean",
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false,
				"revealProblems": "onProblem"
			},
			"group": {
				"kind": "none",
				"isDefault": false
			}
		},
		{
			"label": "Reveal build folder",
			"type": "shell",
			"command": "open build",
			"problemMatcher": [
				"$gcc"
			],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false,
				"revealProblems": "onProblem"
			}
		}
